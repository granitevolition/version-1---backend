# Database connection
# Use any of these (in this order of precedence)
DATABASE_URL=postgresql://username:password@hostname:port/database
DATABASE_PUBLIC_URL=postgresql://username:password@hostname:port/database
POSTGRES_URL=postgresql://username:password@hostname:port/database

# For Railway deployment with PostgreSQL, Railway should set this automatically:
# DATABASE_URL=postgresql://postgres:password@containers-us-west-xx.railway.app:port/railway

# Port for the server (default: 5000)
PORT=5000

# Environment (development or production)
NODE_ENV=production

# CORS Configuration
# Add allowed origins separated by commas (used in addition to the hardcoded ones)
ALLOWED_ORIGINS=https://your-frontend-app.com,https://another-app.com

# Humanizer API URL (if using the humanizing features)
HUMANIZER_API_URL=https://your-humanizer-api-url.com/api

# JWT Secret for token generation/verification (if using JWT auth)
JWT_SECRET=your-jwt-secret-should-be-long-and-random

# Optional: logging level (debug, info, warn, error)
LOG_LEVEL=info
